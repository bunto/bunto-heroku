# Gemfile

## Get gems from RubyGems
source 'https://rubygems.org'

## Use Ruby version 2.2.4 -- minimum is ruby '2.1.2' 
ruby '2.2.4'

## Use these gems
gem 'bunto', '>= 1.0' # rack-bunto supports Bunto since version 1
gem 'kramdown'
gem 'rack-bunto' # NOTICE | Run this if it's not working:  gem 'rack-bunto', :git => 'https://github.com/bunto/rack-bunto.git'
gem 'rake'
gem 'puma'
